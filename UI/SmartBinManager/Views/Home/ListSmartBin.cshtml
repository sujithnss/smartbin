

@model IEnumerable<SmartBinManager.Models.SmartBinViewModel>
@{
    ViewBag.Title = "SmartBins";
}

<p>Lists the SmartBin associated with the Customer</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TriggerActionId)
        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TriggerActionId)
            </td>
       
            
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Register SmartBin", "RegisterSmartBin")
</p>