

@model IEnumerable<SmartBinManager.Models.SmartBinViewModel>
@{
    ViewBag.Title = "SmartBins";
}

<p></p>
@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TriggerActionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReOrderLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderQuantity)
        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TriggerActionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReOrderLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderQuantity)
            </td>
            
        </tr>
    }
</table>
}
else
{
    <p><h3>No SmartBins available</h3> Please click the below link to register</p>
}

<p>
    @Html.ActionLink("Register SmartBin", "RegisterSmartBin")
</p>